@model IEnumerable<ArticleModel>
@{
    ViewData["Title"] = "List of Articles I've Written";
}

<h1 id="page_title">Articles I've written</h1>

<div class="centered_wrapper">
    <form asp-action="Index" asp-controller="Articles" method="GET">
        <input id="searchBy" type="text" class="search" name="searchBy" 
            placeholder="Filter by title/tag" value="@ViewBag.SearchBy">
    </form>

    @foreach (var article in Model)
    {
    <article>
        <p class="date">@article.FormattedPublishedAt()</p>
        <h2><a href="@article.Link" target="_blank">@article.Title</a></h2>
        <div class="tags">
            @foreach (var tag in article.Tags)
            {
            <a href="#" data-tag="#searchBy">@tag</a>    
            }
        </div>
        <hr>
    </article>
    }
</div>

